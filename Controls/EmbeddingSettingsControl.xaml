<UserControl x:Class="CocoroConsole.Controls.EmbeddingSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="SettingLabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Width" Value="160"/>
        </Style>
        <Style x:Key="SettingTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="#FF0078D7"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <!-- プリセットボタン共通スタイル -->
        <Style x:Key="PresetButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4873CF"/>
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A84D9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A62B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- 削除ボタンスタイル -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D50000"/>
            <Setter Property="Foreground" Value="WhiteSmoke"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E53935"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#B71C1C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- プリセット選択 -->
                <GroupBox Header="プリセット選択"
                          Margin="0,0,20,20"
                          Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="85"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox x:Name="PresetSelectComboBox"
                                  Grid.Column="0"
                                  Margin="0,5,10,5"
                                  SelectionChanged="PresetSelectComboBox_SelectionChanged"/>

                        <Button x:Name="AddPresetButton"
                                Grid.Column="1"
                                Content="追加"
                                Margin="0,5,0,5"
                                Padding="10,5"
                                Click="AddPresetButton_Click"
                                ToolTip="プリセットを追加"/>

                        <Button x:Name="DeletePresetButton"
                                Grid.Column="2"
                                Content="削除"
                                Margin="5,5,0,5"
                                Padding="10,5"
                                Style="{StaticResource DeleteButtonStyle}"
                                Click="DeletePresetButton_Click"
                                ToolTip="このプリセットを削除"/>
                    </Grid>
                </GroupBox>

                <!-- Embedding設定 -->
                <GroupBox Header="Embedding設定"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel>
                        <!-- 警告テキスト -->
                        <TextBlock Foreground="Red"
                                   Margin="0,0,0,10">
                            ※一度設定したら変更しないでください
                        </TextBlock>

                        <!-- プリセット名(memory_id) -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Memory ID:"
                                       Style="{StaticResource SettingLabelStyle}"/>
                            <TextBox x:Name="MemoryIdTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource SettingTextBoxStyle}"
                                     ToolTip="記憶データベースの識別子"
                                     TextChanged="OnSettingChanged"/>
                        </Grid>

                        <!-- Embedding APIキー -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Embedding APIキー:"
                                       Style="{StaticResource SettingLabelStyle}"/>
                            <PasswordBox x:Name="EmbeddingApiKeyPasswordBox"
                                         Grid.Column="1"
                                         Foreground="#FF0078D7"
                                         Padding="2"
                                         BorderBrush="#CCCCCC"
                                         BorderThickness="1"
                                         ToolTip="空欄の場合はLLM APIキーを使用"
                                         PasswordChanged="OnSettingChanged"/>
                        </Grid>

                        <!-- Embeddingモデル -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Embeddingモデル:"
                                       Style="{StaticResource SettingLabelStyle}"/>
                            <TextBox x:Name="EmbeddingModelTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource SettingTextBoxStyle}"
                                     ToolTip="例: text-embedding-3-small"
                                     TextChanged="OnSettingChanged"/>
                        </Grid>
                        <!-- Embeddingモデル説明テキスト -->
                        <TextBlock Foreground="#666666"
                                   TextWrapping="Wrap"
                                   Margin="160,0,0,5">
                            <TextBlock.Inlines>
                                <Run Text="記憶DBで使うモデルを設定します。LiteLLM の書式で入力してください。"/>
                                <LineBreak/>
                                <Run Text="ex) openai/text-embedding-3-large, gemini/gemini-embedding-001"/>
                                <LineBreak/>
                                <Run Text="詳細は "/>
                                <Hyperlink NavigateUri="https://docs.litellm.ai/docs/embedding/supported_embedding"
                                           RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="https://docs.litellm.ai/docs/embedding/supported_embedding"/>
                                </Hyperlink>
                                <Run Text=" を参照してください"/>
                            </TextBlock.Inlines>
                        </TextBlock>

                        <!-- Embedding Base URL -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Embedding Base URL:"
                                       Style="{StaticResource SettingLabelStyle}"/>
                            <TextBox x:Name="EmbeddingBaseUrlTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource SettingTextBoxStyle}"
                                     ToolTip="Embedding API用のベースURL（空欄の場合はデフォルト）"
                                     TextChanged="OnSettingChanged"/>
                        </Grid>

                        <!-- Embedding Dimension -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Embedding次元数:"
                                       Style="{StaticResource SettingLabelStyle}"/>
                            <TextBox x:Name="EmbeddingDimensionTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource SettingTextBoxStyle}"
                                     ToolTip="Embeddingベクトルの次元数"
                                     TextChanged="OnSettingChanged"/>
                        </Grid>

                        <!-- 類似エピソード数 -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="類似エピソード数:"
                                       Style="{StaticResource SettingLabelStyle}"/>
                            <TextBox x:Name="SimilarEpisodesLimitTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource SettingTextBoxStyle}"
                                     ToolTip="記憶検索時に取得する類似エピソードの最大数"
                                     TextChanged="OnSettingChanged"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
