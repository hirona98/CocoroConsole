<UserControl x:Class="CocoroConsole.Controls.EmbeddingSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="SettingLabelStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Width" Value="160"/>
        </Style>
        <Style x:Key="SettingTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="#FF0078D7"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Embedding設定 -->
                <GroupBox Header="Embedding設定"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel>
                        <!-- プリセット名(memory_id) -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Memory ID:"
                                       Style="{StaticResource SettingLabelStyle}"/>
                            <TextBox x:Name="MemoryIdTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource SettingTextBoxStyle}"
                                     ToolTip="記憶データベースの識別子"
                                     TextChanged="OnSettingChanged"/>
                        </Grid>

                        <!-- Embedding APIキー -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Embedding APIキー:"
                                       Style="{StaticResource SettingLabelStyle}"/>
                            <PasswordBox x:Name="EmbeddingApiKeyPasswordBox"
                                         Grid.Column="1"
                                         Foreground="#FF0078D7"
                                         Padding="2"
                                         BorderBrush="#CCCCCC"
                                         BorderThickness="1"
                                         ToolTip="空欄の場合はLLM APIキーを使用"
                                         PasswordChanged="OnSettingChanged"/>
                        </Grid>

                        <!-- Embeddingモデル -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Embeddingモデル:"
                                       Style="{StaticResource SettingLabelStyle}"/>
                            <TextBox x:Name="EmbeddingModelTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource SettingTextBoxStyle}"
                                     ToolTip="例: text-embedding-3-small"
                                     TextChanged="OnSettingChanged"/>
                        </Grid>

                        <!-- Embedding Base URL -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Embedding Base URL:"
                                       Style="{StaticResource SettingLabelStyle}"/>
                            <TextBox x:Name="EmbeddingBaseUrlTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource SettingTextBoxStyle}"
                                     ToolTip="Embedding API用のベースURL（空欄の場合はデフォルト）"
                                     TextChanged="OnSettingChanged"/>
                        </Grid>

                        <!-- Embedding Dimension -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Embedding次元数:"
                                       Style="{StaticResource SettingLabelStyle}"/>
                            <TextBox x:Name="EmbeddingDimensionTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource SettingTextBoxStyle}"
                                     ToolTip="Embeddingベクトルの次元数"
                                     TextChanged="OnSettingChanged"/>
                        </Grid>

                        <!-- 類似エピソード数 -->
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="類似エピソード数:"
                                       Style="{StaticResource SettingLabelStyle}"/>
                            <TextBox x:Name="SimilarEpisodesLimitTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource SettingTextBoxStyle}"
                                     ToolTip="記憶検索時に取得する類似エピソードの最大数"
                                     TextChanged="OnSettingChanged"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- 記憶の管理 -->
                <GroupBox Header="記憶の管理"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel>
                        <TextBlock Foreground="#666666"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10">
                            <Run Text="全キャラクターのデータが完全に削除されます。"
                                 Foreground="Red"/>
                        </TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="BackupMemoryButton"
                                    Content="記憶をバックアップ"
                                    Background="#FF0078D7"
                                    Foreground="White"
                                    Padding="10,5"
                                    Margin="0,0,10,0"
                                    Click="BackupMemoryButton_Click"
                                    ToolTip="すべての記憶データをバックアップします"/>

                            <Button x:Name="RestoreMemoryButton"
                                    Content="記憶を復元"
                                    Background="#FF228B22"
                                    Foreground="White"
                                    Padding="10,5"
                                    Margin="0,0,10,0"
                                    Click="RestoreMemoryButton_Click"
                                    ToolTip="バックアップから記憶データを復元します"/>

                            <Button x:Name="DeleteMemoryButton"
                                    Content="記憶を削除"
                                    Background="#FFD50000"
                                    Foreground="White"
                                    Padding="10,5"
                                    HorizontalAlignment="Left"
                                    Click="DeleteMemoryButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
