<UserControl x:Class="CocoroConsole.Controls.SystemSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CocoroConsole.Controls"
             mc:Ignorable="d"
             d:DesignHeight="1200"
             d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="GroupBoxLikeExpanderStyle"
               TargetType="Expander">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="BorderBrush"
                    Value="#CCCCCC"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="10"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Foreground"
                    Value="#4873CF"/>
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- リマインダー設定 -->
                <Expander Header="リマインダー"
                          Margin="0,0,20,20"
                          IsExpanded="False"
                          Style="{StaticResource GroupBoxLikeExpanderStyle}">
                    <StackPanel>
                        <!-- リマインダー機能チェックボックス（グローバル） -->
                        <CheckBox x:Name="EnableReminderCheckBox"
                                  Content="リマインダー機能を有効にする"
                                  Margin="0,0,0,10"
                                  Foreground="#FF4873CF"/>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <Button x:Name="AddReminderButton"
                                    Content="追加"
                                    Padding="10,5"
                                    Click="AddReminderButton_Click"/>
                        </StackPanel>

                        <!-- リマインダーリスト -->
                        <Border BorderBrush="#DDDDDD"
                                BorderThickness="1"
                                Background="White"
                                MaxHeight="240">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl x:Name="RemindersItemsControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="1"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0"
                                                      Margin="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="26"/>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="250"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <CheckBox Grid.Column="0"
                                                              IsChecked="{Binding Enabled}"
                                                              Tag="{Binding LocalId}"
                                                              Checked="ReminderEnabledCheckBox_Changed"
                                                              Unchecked="ReminderEnabledCheckBox_Changed"
                                                              Width="18"
                                                              Height="18"
                                                              HorizontalAlignment="Left"
                                                              VerticalAlignment="Center"/>

                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding NextFireAtLocal}"
                                                               VerticalAlignment="Center"
                                                               Margin="6,0,0,0"/>

                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding RuleText}"
                                                               VerticalAlignment="Center"
                                                               Margin="6,0,0,0"/>

                                                    <TextBlock Grid.Column="3"
                                                               Text="{Binding Content}"
                                                               TextWrapping="Wrap"
                                                               VerticalAlignment="Center"
                                                               Margin="6,0,0,0"/>

                                                    <Button Grid.Column="4"
                                                            Content="編集"
                                                            Padding="10,3"
                                                            Margin="10,0,0,0"
                                                            Click="EditReminderButton_Click"
                                                            Tag="{Binding LocalId}"/>

                                                    <Button Grid.Column="5"
                                                            Content="削除"
                                                            Padding="10,3"
                                                            Margin="8,0,0,0"
                                                            Background="#DC143C"
                                                            Foreground="White"
                                                            BorderThickness="0"
                                                            Click="DeleteReminderButton_Click"
                                                            Tag="{Binding LocalId}"/>
                                                </Grid>

                                                <Rectangle Grid.Row="1"
                                                           Fill="#E0E0E0"
                                                           Height="1"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </Expander>

                <!-- デスクトップウォッチ -->
                <Expander Header="デスクトップウォッチ"
                          Margin="0,0,20,20"
                          IsExpanded="False"
                          Style="{StaticResource GroupBoxLikeExpanderStyle}">
                    <StackPanel>
                        <!-- 説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   Margin="0,-10,0,10">
                            デスクトップの画面を定期的に取得し内容に応じたコメントをします。
                            <LineBreak/>
                            LLMプロバイダのポリシーに反する画像を送るとアカウント停止の可能性があるので注意してください。
                        </TextBlock>

                        <!-- ウォッチ機能の有効/無効設定（cocoro_ghost側） -->
                        <CheckBox x:Name="DesktopWatchEnabledCheckBox"
                                  Content="デスクトップウォッチを有効にする（cocoro_ghostが能動的に取得要求を出します）"
                                  Margin="0,5,0,10"
                                  Foreground="#FF4873CF"
                                  ToolTip="Enable desktop watch (server-driven)"/>

                        <!-- ウォッチ間隔（秒） -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="28"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="ウォッチ間隔:"
                                       VerticalAlignment="Center"
                                       Height="19"/>
                            <TextBox Grid.Column="1"
                                     x:Name="DesktopWatchIntervalSecondsTextBox"
                                     Foreground="#FF0078D7"
                                     Padding="2"
                                     VerticalAlignment="Center"
                                     Width="50"
                                     HorizontalAlignment="Left"
                                     Margin="10,0,10,0"/>
                            <TextBlock Grid.Column="2"
                                       Text="秒"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                        </Grid>

                        <!-- 区切り線 -->
                        <Rectangle Fill="#E0E0E0"
                                   Height="1"
                                   Margin="0,10,0,10"/>

                        <!-- スクショ除外（ウィンドウタイトル正規表現） -->
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   Margin="0,0,0,10">
                            アクティブウィンドウのタイトルに対して正規表現でマッチ判定し、
                            マッチした場合は画面キャプチャをスキップします。
                            <LineBreak/>
                            （1行に1つ。トリムして保存されます。大文字小文字は区別しません）
                        </TextBlock>

                        <TextBox x:Name="ExcludeWindowTitlePatternsTextBox"
                                 Foreground="#FF0078D7"
                                 Padding="2"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="120"
                                 Margin="0,0,0,5"
                                 ToolTip="1行に1つ。正規表現。ウィンドウタイトルにマッチしたらキャプチャをスキップします。"/>
                    </StackPanel>
                </Expander>

                <!-- 音声認識設定 -->
                <Expander Header="音声認識設定"
                          Margin="0,0,20,20"
                          IsExpanded="False"
                          Style="{StaticResource GroupBoxLikeExpanderStyle}">
                    <StackPanel>
                        <!-- 説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   Margin="0,-10,0,10">
                            マイクと話者識別の設定を行います。話者登録すると特定の人物の声だけを認識します。
                        </TextBlock>
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="入力しきい値:"
                                       VerticalAlignment="Center"/>
                            <Slider Grid.Column="1"
                                    x:Name="MicThresholdSlider"
                                    Minimum="-50"
                                    Maximum="0"
                                    Value="-45"
                                    TickFrequency="10"
                                    TickPlacement="BottomRight"
                                    Margin="10,0,10,0"/>
                            <TextBlock Grid.Column="2"
                                       Text="{Binding ElementName=MicThresholdSlider, Path=Value, StringFormat='{}{0:0} dB'}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   Margin="0,0,0,10">
                            ※値が低いほど（-50dBに近いほど）音声を拾いやすくなりますが、環境音も拾いやすくなります。
                        </TextBlock>

                        <local:SpeakerManagementControl x:Name="SpeakerManagementControl"
                                                        Margin="0,6,0,0"/>
                    </StackPanel>
                </Expander>

                <!-- API認証設定 -->
                <Expander Header="API認証設定"
                          Margin="0,0,20,0"
                          IsExpanded="False"
                          Style="{StaticResource GroupBoxLikeExpanderStyle}">
                    <StackPanel>
                        <!-- 説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   Margin="0,-10,0,10">
                            APIで使用するBearer Tokenです。将来的に変更可能になります。
                        </TextBlock>

                        <!-- Bearer Token設定 -->
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Bearer Token:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="BearerTokenPasswordBox"
                                     Padding="2"
                                     VerticalAlignment="Center"
                                     Width="200"
                                     HorizontalAlignment="Left"
                                     TextChanged="BearerTokenPasswordBox_PasswordChanged"
                                     IsEnabled="False"/>
                        </Grid>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
