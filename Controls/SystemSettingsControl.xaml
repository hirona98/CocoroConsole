<UserControl x:Class="CocoroConsole.Controls.SystemSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CocoroConsole.Controls"
             mc:Ignorable="d"
             d:DesignHeight="1200"
             d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="GroupBoxLikeExpanderStyle"
               TargetType="Expander">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="BorderBrush"
                    Value="#CCCCCC"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="10"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Foreground"
                    Value="#4873CF"/>
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- リマインダー設定 -->
                <Expander Header="リマインダー（試験運用）"
                          Margin="0,0,20,20"
                          IsExpanded="False"
                          Style="{StaticResource GroupBoxLikeExpanderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 説明テキスト -->
                        <TextBlock Grid.Row="0"
                                   TextWrapping="Wrap"
                                   Foreground="#666666"
                                   Margin="0,0,0,10">
                            設定した時刻にキャラクターが知らせてくれます。
                        </TextBlock>

                        <!-- リマインダー機能チェックボックス -->
                        <CheckBox Grid.Row="1"
                                  x:Name="EnableReminderCheckBox"
                                  Content="リマインダー機能を使用する（要再起動）"
                                  Margin="0,0,0,10"
                                  Foreground="#FF4873CF"/>

                        <!-- リマインダー追加エリア -->
                        <Grid Grid.Row="2"
                              x:Name="ReminderInputGrid"
                              Margin="0,0,0,10"
                              IsEnabled="{Binding IsChecked, ElementName=EnableReminderCheckBox}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="130"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="設定日時："
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0"/>

                            <TextBox Grid.Column="1"
                                     x:Name="ReminderDateTimeTextBox"
                                     Foreground="#FF0078D7"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"
                                     Padding="2"
                                     VerticalAlignment="Center"
                                     Text=""
                                     ToolTip="YYYY-MM-DD HH:MM形式で入力（例: 2025-01-18 15:00）"/>

                            <TextBlock Grid.Column="2"
                                       Text="内容："
                                       VerticalAlignment="Center"
                                       Margin="10,0,5,0"/>

                            <TextBox Grid.Column="3"
                                     x:Name="ReminderMessageTextBox"
                                     Foreground="#FF0078D7"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"
                                     Padding="2"
                                     VerticalAlignment="Center"
                                     Text="寝る"
                                     ToolTip="リマインダーの内容を入力"/>

                            <Button Grid.Column="4"
                                    x:Name="AddReminderButton"
                                    Content="追加"
                                    Padding="10,5"
                                    Margin="10,0,0,0"
                                    Click="AddReminderButton_Click"/>
                        </Grid>

                        <!-- リマインダーリスト -->
                        <Border Grid.Row="3"
                                BorderBrush="#DDDDDD"
                                BorderThickness="1"
                                Background="White"
                                MaxHeight="200"
                                IsEnabled="{Binding IsChecked, ElementName=EnableReminderCheckBox}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl x:Name="RemindersItemsControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="1"/>
                                                </Grid.RowDefinitions>

                                                <!-- アイテム内容 -->
                                                <Grid Grid.Row="0"
                                                      Margin="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="60"/>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- ID -->
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding Id}"
                                                               VerticalAlignment="Center"
                                                               Foreground="#666666"/>

                                                    <!-- 予定時刻 -->
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding RemindDatetime}"
                                                               VerticalAlignment="Center"
                                                               Margin="10,0"/>

                                                    <!-- メッセージ -->
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding Requirement}"
                                                               TextWrapping="Wrap"
                                                               VerticalAlignment="Center"
                                                               Margin="10,0"/>

                                                    <!-- 削除ボタン -->
                                                    <Button Grid.Column="3"
                                                            Content="×"
                                                            Width="20"
                                                            Height="20"
                                                            Background="#DC143C"
                                                            Foreground="White"
                                                            BorderThickness="0"
                                                            FontSize="12"
                                                            FontWeight="Bold"
                                                            VerticalAlignment="Center"
                                                            Click="DeleteReminderButton_Click"
                                                            Tag="{Binding Id}"
                                                            ToolTip="このリマインダーを削除">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border Background="{TemplateBinding Background}"
                                                                                    CornerRadius="10">
                                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                                  VerticalAlignment="Top"
                                                                                                  Margin="0,1,0,0"/>
                                                                            </Border>
                                                                            <ControlTemplate.Triggers>
                                                                                <Trigger Property="IsMouseOver"
                                                                                         Value="True">
                                                                                    <Setter Property="Background"
                                                                                            Value="#B22222"/>
                                                                                </Trigger>
                                                                            </ControlTemplate.Triggers>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </Grid>

                                                <!-- 区切り線 -->
                                                <Rectangle Grid.Row="1"
                                                           Fill="#E0E0E0"
                                                           Height="1"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Expander>

                <!-- デスクトップウォッチ設定 -->
                <Expander Header="デスクトップウォッチ"
                          Margin="0,0,20,20"
                          IsExpanded="False"
                          Style="{StaticResource GroupBoxLikeExpanderStyle}">
                    <StackPanel>
                        <!-- 説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   Margin="0,0,0,10">
                            デスクトップの画面を定期的に取得し内容に応じたコメントをします。
                            <LineBreak/>
                            センシティブな画像を送るとアカウント停止の可能性があるので注意してください。
                        </TextBlock>

                        <!-- ウォッチ機能の有効/無効設定 -->
                        <CheckBox x:Name="ScreenshotEnabledCheckBox"
                                  Content="デスクトップウォッチを有効にする（LLMに画像を送信します）"
                                  Margin="0,5,0,5"
                                  Foreground="#FF4873CF"
                                  ToolTip="Enable desktop monitoring"/>

                        <!-- アクティブウィンドウのみ設定 -->
                        <CheckBox x:Name="CaptureActiveWindowOnlyCheckBox"
                                  Content="アクティブウィンドウだけを対象にする"
                                  Margin="0,10,0,5"
                                  Foreground="#FF4873CF"
                                  ToolTip="Capture active window only"/>

                        <!-- ウォッチ間隔設定 -->
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="28"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="ウォッチ間隔:"
                                       VerticalAlignment="Center"
                                       Height="19"/>
                            <TextBox Grid.Column="1"
                                     x:Name="ScreenshotIntervalTextBox"
                                     Foreground="#FF0078D7"
                                     Padding="2"
                                     VerticalAlignment="Center"
                                     Width="50"
                                     HorizontalAlignment="Left"
                                     Margin="10,0,10,0"/>
                            <TextBlock Grid.Column="2"
                                       Text="分"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                        </Grid>

                        <!-- アイドルタイムアウト設定 -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="28"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="アイドルタイムアウト:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="IdleTimeoutTextBox"
                                     Foreground="#FF0078D7"
                                     Padding="2"
                                     VerticalAlignment="Center"
                                     Width="50"
                                     HorizontalAlignment="Left"
                                     Margin="10,0,10,0"/>
                            <TextBlock Grid.Column="2"
                                       Text="分"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                        </Grid>

                        <!-- アイドルタイムアウト説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   Margin="0,0,0,10">
                            ※マウスやキーボードの操作がない時間が設定値を超えると、デスクトップウォッチを一時停止します。
                        </TextBlock>

                        <!-- 除外パターン設定 -->
                        <TextBlock Text="除外パターン（正規表現）:"
                                   Margin="0,5,0,5"
                                   VerticalAlignment="Center"/>
                        <TextBox x:Name="ExcludePatternsTextBox"
                                 Foreground="#FF0078D7"
                                 Padding="2"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="80"
                                 Margin="0,0,0,5"
                                 ToolTip="ウィンドウタイトルにマッチする正規表現パターン（1行に1つ）"/>

                        <!-- 除外パターン説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   Margin="0,0,0,5">
                            ※ウィンドウタイトルが指定パターンにマッチした場合、スクリーンショットを取得しません。
                            <LineBreak/>
                            　例: .*パスワード.* （パスワードを含むタイトルを除外）
                        </TextBlock>
                    </StackPanel>
                </Expander>

                <!-- 音声認識設定 -->
                <Expander Header="音声認識設定"
                          Margin="0,0,20,20"
                          IsExpanded="False"
                          Style="{StaticResource GroupBoxLikeExpanderStyle}">
                    <StackPanel>
                        <!-- 説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   Margin="0,0,0,10">
                            マイクと話者識別の設定を行います。話者登録すると特定の人物の声だけを認識します。
                        </TextBlock>
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="入力しきい値:"
                                       VerticalAlignment="Center"/>
                            <Slider Grid.Column="1"
                                    x:Name="MicThresholdSlider"
                                    Minimum="-50"
                                    Maximum="0"
                                    Value="-45"
                                    TickFrequency="10"
                                    TickPlacement="BottomRight"
                                    Margin="10,0,10,0"/>
                            <TextBlock Grid.Column="2"
                                       Text="{Binding ElementName=MicThresholdSlider, Path=Value, StringFormat='{}{0:0} dB'}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Grid>
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   Margin="0,0,0,10">
                            ※値が低いほど（-50dBに近いほど）音声を拾いやすくなりますが、環境音も拾いやすくなります。
                        </TextBlock>

                        <local:SpeakerManagementControl x:Name="SpeakerManagementControl"
                                                        Margin="0,6,0,0"/>
                    </StackPanel>
                </Expander>

                <!-- API認証設定 -->
                <Expander Header="API認証設定"
                          Margin="0,0,20,0"
                          IsExpanded="False"
                          Style="{StaticResource GroupBoxLikeExpanderStyle}">
                    <StackPanel>
                        <!-- 説明テキスト -->
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666"
                                   Margin="0,0,0,10">
                            APIで使用するBearer Tokenです。将来的に変更可能になります。
                        </TextBlock>

                        <!-- Bearer Token設定 -->
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Bearer Token:"
                                       VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     x:Name="BearerTokenPasswordBox"
                                     Padding="2"
                                     VerticalAlignment="Center"
                                     Width="200"
                                     HorizontalAlignment="Left"
                                     TextChanged="BearerTokenPasswordBox_PasswordChanged"
                                     IsEnabled="False"/>
                        </Grid>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
