<UserControl x:Class="CocoroConsole.Controls.CharacterPresetManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900">

    <UserControl.Resources>
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF6B6B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- プリセット選択 -->
                <GroupBox Header="キャラクタープリセット選択"
                          Margin="0,0,20,20"
                          Padding="10"
                          ToolTip="Select Character Preset (Restart Required)">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="85"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox x:Name="CharacterPresetComboBox"
                                  Grid.Column="0"
                                  Margin="0,5,10,5"
                                  SelectionChanged="CharacterPresetComboBox_SelectionChanged"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Id">
                        </ComboBox>

                        <Button x:Name="AddPresetButton"
                                Grid.Column="1"
                                Content="追加"
                                Margin="0,5,0,5"
                                Padding="10,5"
                                Click="AddPresetButton_Click"
                                ToolTip="Add new preset"/>

                        <Button x:Name="DuplicatePresetButton"
                                Grid.Column="2"
                                Content="複製"
                                Margin="5,5,0,5"
                                Padding="10,5"
                                Click="DuplicatePresetButton_Click"
                                ToolTip="Duplicate current preset"/>

                        <Button x:Name="DeletePresetButton"
                                Grid.Column="3"
                                Content="削除"
                                Margin="5,5,0,5"
                                Padding="10,5"
                                Style="{StaticResource DeleteButtonStyle}"
                                Click="DeletePresetButton_Click"
                                ToolTip="Delete this preset"/>
                    </Grid>
                </GroupBox>

                <!-- プリセット詳細編集 -->
                <GroupBox Header="プリセット設定"
                          Margin="0,0,20,20"
                          Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <!-- プリセット名 -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="プリセット名:"
                                           VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1"
                                         x:Name="PresetNameTextBox"
                                         Foreground="#FF0078D7"
                                         Padding="2"/>
                            </Grid>

                            <!-- Memory ID -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Memory ID:"
                                           VerticalAlignment="Center"
                                           Foreground="#FF4873CF"/>
                                <TextBox Grid.Column="1"
                                         x:Name="MemoryIdTextBox"
                                         Foreground="#FF0078D7"
                                         Padding="2"/>
                            </Grid>
                            <TextBlock TextWrapping="Wrap"
                                       Foreground="#666666"
                                       Margin="120,2,0,0">
                                あなたとキャラクターの記憶を紐づけるIDです。
                                <LineBreak/>
                                キャラクター毎に別の名前にすることを推奨します。
                            </TextBlock>

                        </StackPanel>

                        <Separator Grid.Column="1"
                                   Margin="20,0"
                                   Width="1"
                                   Background="#FFCCCCCC"
                                   BorderBrush="#FFCCCCCC"
                                   VerticalAlignment="Stretch"/>

                        <!-- System Prompt -->
                        <Grid Grid.Column="2"
                              Margin="20,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"
                                       Text="System Prompt:"
                                       ToolTip="Prompt"
                                       Margin="0,0,0,5"/>
                            <TextBox Grid.Row="1"
                                     x:Name="SystemPromptTextBox"
                                     Foreground="#FF0078D7"
                                     Padding="4"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     MinHeight="400"/>
                        </Grid>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
