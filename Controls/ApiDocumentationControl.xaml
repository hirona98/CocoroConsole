<UserControl x:Class="CocoroConsole.Controls.ApiDocumentationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="800">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="API説明"
                          Margin="0,0,20,20"
                          Padding="10">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="#666666">
                            APIを使って外部プログラムから通知・メタ要求を投げられます。
                        </TextBlock>

                        <Expander x:Name="NotificationApiExpander"
                                  Header="通知API（POST /api/v2/notification）"
                                  Foreground="#666666"
                                  IsExpanded="False"
                                  Margin="0,10,0,0">
                            <TextBox x:Name="NotificationApiTextBox"
                                     IsReadOnly="True"
                                     BorderThickness="0"
                                     VerticalScrollBarVisibility="Auto"
                                     Foreground="#666666"
                                     Padding="2"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     FontFamily="Consolas"
                                     Margin="0,10,0,0"/>
                        </Expander>

                        <Expander x:Name="MetaRequestApiExpander"
                                  Header="メタ要求API（POST /api/v2/meta-request）"
                                  Foreground="#666666"
                                  IsExpanded="False"
                                  Margin="0,10,0,0">
                            <TextBox x:Name="MetaRequestApiTextBox"
                                     IsReadOnly="True"
                                     BorderThickness="0"
                                     VerticalScrollBarVisibility="Auto"
                                     Foreground="#666666"
                                     Padding="2"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     FontFamily="Consolas"
                                     Margin="0,10,0,0"/>
                        </Expander>

                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
