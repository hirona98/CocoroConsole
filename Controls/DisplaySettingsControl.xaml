<UserControl x:Class="CocoroConsole.Controls.DisplaySettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:CocoroConsole.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="760">
    <Grid Margin="20,20,0,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,20,0">
                <Grid Margin="0,5,0,10"
                      HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="RestoreWindowPositionCheckBox"
                              Grid.Column="0"
                              Content="起動時にキャラクター位置を復元する"
                              Foreground="#FF4873CF"
                              VerticalAlignment="Center"/>
                    <Button x:Name="ResetCharacterPositionButton"
                            Grid.Column="1"
                            Content="位置リセット"
                            Margin="10,0,0,0"
                            Padding="8,2"
                            VerticalAlignment="Center"
                            Click="ResetCharacterPositionButton_Click"/>
                </Grid>
                <CheckBox x:Name="TopMostCheckBox"
                          Content="最前面に表示"
                          Margin="0,5,0,10"
                          Foreground="#FF4873CF"/>
                <CheckBox x:Name="EscapeCursorCheckBox"
                          Content="カーソルから逃げる（Shiftキー押下中は無効）"
                          Margin="0,5,0,10"
                          Foreground="#FF4873CF"/>

                <!-- 移動先座標設定 -->
                <local:EscapePositionControl x:Name="EscapePositionControl"/>

                <Grid Margin="0,5,0,10"
                      HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="InputVirtualKeyCheckBox"
                              Grid.Column="0"
                              Content="右ドラッグで触ったときに仮想キー入力する"
                              Foreground="#FF4873CF"
                              VerticalAlignment="Center"/>
                    <TextBox x:Name="VirtualKeyStringTextBox"
                             Grid.Column="1"
                             Width="120"
                             Margin="10,0,5,0"
                             Foreground="#FF0078D7"
                             IsReadOnly="True"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Left"
                             Background="#FFDDDDDD"/>
                    <Button x:Name="CaptureKeyButton"
                            Grid.Column="2"
                            Content="Capture Key"
                            Padding="10,0"
                            ToolTip="Capture key"
                            HorizontalAlignment="Left"
                            Click="CaptureKeyButton_Click"/>
                </Grid>
                <CheckBox x:Name="AutoMoveCheckBox"
                          Content="何もない場所に自動移動する（不安定）"
                          Margin="0,5,0,10"
                          ToolTip="Auto move (unstable)"
                          Foreground="#FF4873CF"/>

                <!-- ウィンドウサイズ設定 -->
                <GroupBox Header="キャラクターサイズ"
                          Margin="0,15,0,0"
                          Padding="10"
                          ToolTip="Character size">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Slider x:Name="WindowSizeSlider"
                                Minimum="100"
                                Maximum="4000"
                                Value="650"
                                TickFrequency="100"
                                TickPlacement="BottomRight"
                                Margin="0,5"
                                Grid.Row="0"/>

                        <TextBlock Grid.Row="1"
                                   Margin="0,5">
                            <Run Text="サイズ: "/>
                            <Run Text="{Binding ElementName=WindowSizeSlider, Path=Value, StringFormat='{}{0:0}'}"/>
                        </TextBlock>
                    </Grid>
                </GroupBox>

                <GroupBox Header="画質設定"
                          Margin="0,15,0,0"
                          Padding="10">
                    <StackPanel>
                        <CheckBox x:Name="AmbientOcclusionCheckBox"
                                  Content="Ambient Occlusion"
                                  Margin="0,5,0,10"
                                  ToolTip="Ambient Occlusion"
                                  Foreground="#FF4873CF"/>

                        <!-- アンチエイリアシング設定 -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5">
                            <TextBlock Text="アンチエイリアシング（MSAA）"
                                       VerticalAlignment="Center"
                                       Foreground="#FF4873CF"
                                       Width="200"
                                       ToolTip="Anti-aliasing (MSAA)"/>
                            <ComboBox x:Name="MSAAComboBox"
                                      Width="120"
                                      Foreground="#FF4873CF">
                                <ComboBoxItem Content="Disable"
                                              Tag="0"/>
                                <ComboBoxItem Content="2x"
                                              Tag="2"/>
                                <ComboBoxItem Content="4x"
                                              Tag="4"/>
                                <ComboBoxItem Content="8x"
                                              Tag="8"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- キャラクターシャドウ設定 -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5">
                            <TextBlock Text="キャラクターの影"
                                       VerticalAlignment="Center"
                                       Foreground="#FF4873CF"
                                       Width="200"
                                       ToolTip="Character Shadow"/>
                            <ComboBox x:Name="CharacterShadowComboBox"
                                      Width="120"
                                      Foreground="#FF4873CF">
                                <ComboBoxItem Content="Disable"
                                              Tag="0"/>
                                <ComboBoxItem Content="Hard Shadow"
                                              Tag="1"/>
                                <ComboBoxItem Content="Soft Shadow"
                                              Tag="2"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- キャラクターシャドウレゾリューション -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5">
                            <TextBlock Text="キャラクターの影の解像度"
                                       VerticalAlignment="Center"
                                       Foreground="#FF4873CF"
                                       Width="200"
                                       ToolTip="Character Shadow Resolution"/>
                            <ComboBox x:Name="CharacterShadowResolutionComboBox"
                                      Width="120"
                                      Foreground="#FF4873CF">
                                <ComboBoxItem Content="Low"
                                              Tag="0"/>
                                <ComboBoxItem Content="Medium"
                                              Tag="1"/>
                                <ComboBoxItem Content="High"
                                              Tag="2"/>
                                <ComboBoxItem Content="Very High"
                                              Tag="3"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- バックグラウンドシャドウ設定 -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5">
                            <TextBlock Text="背景の影"
                                       VerticalAlignment="Center"
                                       Foreground="#FF4873CF"
                                       Width="200"
                                       ToolTip="Background Shadow"/>
                            <ComboBox x:Name="BackgroundShadowComboBox"
                                      Width="120"
                                      Foreground="#FF4873CF">
                                <ComboBoxItem Content="Disable"
                                              Tag="0"/>
                                <ComboBoxItem Content="Hard Shadow"
                                              Tag="1"/>
                                <ComboBoxItem Content="Soft Shadow"
                                              Tag="2"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- バックグラウンドシャドウレゾリューション -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5">
                            <TextBlock Text="背景の影の解像度"
                                       VerticalAlignment="Center"
                                       Foreground="#FF4873CF"
                                       Width="200"
                                       ToolTip="Background Shadow Resolution"/>
                            <ComboBox x:Name="BackgroundShadowResolutionComboBox"
                                      Width="120"
                                      Foreground="#FF4873CF">
                                <ComboBoxItem Content="Low"
                                              Tag="0"/>
                                <ComboBoxItem Content="Medium"
                                              Tag="1"/>
                                <ComboBoxItem Content="High"
                                              Tag="2"/>
                                <ComboBoxItem Content="Very High"
                                              Tag="3"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- 吹き出し設定 -->
                <GroupBox Header="吹き出し設定"
                          Margin="0,15,0,0"
                          Padding="10"
                          ToolTip="Message bubble settings">
                    <StackPanel>
                        <!-- メッセージウィンドウ表示設定 -->
                        <CheckBox x:Name="ShowMessageWindowCheckBox"
                                  Content="発話時メッセージウィンドウを表示する"
                                  Margin="0,5,0,10"
                                  ToolTip="Show message window on speech"
                                  Foreground="#FF4873CF"/>

                        <!-- 最大メッセージ数設定 -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5">
                            <TextBlock Text="最大メッセージ数"
                                       VerticalAlignment="Center"
                                       Foreground="#FF4873CF"
                                       Width="180"
                                       ToolTip="Maximum number of messages"/>
                            <TextBox x:Name="MaxMessageCountTextBox"
                                     Width="60"
                                     Text="3"
                                     Foreground="#FF0078D7"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Left"/>
                        </StackPanel>

                        <!-- 最大合計文字数設定 -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5">
                            <TextBlock Text="最大合計文字数"
                                       VerticalAlignment="Center"
                                       Foreground="#FF4873CF"
                                       Width="180"/>
                            <TextBox x:Name="MaxTotalCharactersTextBox"
                                     Width="60"
                                     Text="300"
                                     Foreground="#FF0078D7"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Left"/>
                        </StackPanel>

                        <!-- 最小ウィンドウサイズ設定 -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5">
                            <TextBlock Text="最小ウィンドウサイズ"
                                       VerticalAlignment="Center"
                                       Foreground="#FF4873CF"
                                       Width="180"/>
                            <TextBox x:Name="MinWindowSizeTextBox"
                                     Width="60"
                                     Text="200"
                                     Foreground="#FF0078D7"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Left"/>
                        </StackPanel>

                        <!-- 最大ウィンドウサイズ設定 -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5">
                            <TextBlock Text="最大ウィンドウサイズ"
                                       VerticalAlignment="Center"
                                       Foreground="#FF4873CF"
                                       Width="180"/>
                            <TextBox x:Name="MaxWindowSizeTextBox"
                                     Width="60"
                                     Text="600"
                                     Foreground="#FF0078D7"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Left"/>
                        </StackPanel>

                        <!-- フォントサイズ設定 -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5">
                            <TextBlock Text="フォントサイズ"
                                       VerticalAlignment="Center"
                                       Foreground="#FF4873CF"
                                       Width="180"
                                       ToolTip="Font size"/>
                            <TextBox x:Name="FontSizeTextBox"
                                     Width="60"
                                     Text="14"
                                     Foreground="#FF0078D7"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Left"
                                     ToolTip="Font size in pixels"/>
                        </StackPanel>

                        <!-- 水平オフセット設定 -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5">
                            <TextBlock Text="水平オフセット"
                                       VerticalAlignment="Center"
                                       Foreground="#FF4873CF"
                                       Width="180"
                                       ToolTip="Horizontal offset"/>
                            <TextBox x:Name="HorizontalOffsetTextBox"
                                     Width="60"
                                     Text="0"
                                     Foreground="#FF0078D7"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Left"
                                     ToolTip="Horizontal offset for message window"/>
                        </StackPanel>

                        <!-- 垂直オフセット設定 -->
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,5">
                            <TextBlock Text="垂直オフセット"
                                       VerticalAlignment="Center"
                                       Foreground="#FF4873CF"
                                       Width="180"
                                       ToolTip="Vertical offset"/>
                            <TextBox x:Name="VerticalOffsetTextBox"
                                     Width="60"
                                     Text="0"
                                     Foreground="#FF0078D7"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Left"
                                     ToolTip="Vertical offset for message window"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
