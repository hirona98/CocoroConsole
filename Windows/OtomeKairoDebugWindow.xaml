<Window x:Class="CocoroConsole.Windows.OtomeKairoDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="otome_kairo デバッグ"
        Height="500"
        Width="350"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="OtomeKairoSliderStyle"
               TargetType="Slider">
            <Setter Property="Minimum"
                    Value="0"/>
            <Setter Property="Maximum"
                    Value="1"/>
            <Setter Property="TickFrequency"
                    Value="0.01"/>
            <Setter Property="IsSnapToTickEnabled"
                    Value="True"/>
            <Setter Property="SmallChange"
                    Value="0.01"/>
            <Setter Property="LargeChange"
                    Value="0.05"/>
            <Setter Property="VerticalAlignment"
                    Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- メイン -->
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="4">

                <!-- ヘッダー行 -->
                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1"
                               Text="前回使用値"
                               FontWeight="SemiBold"
                               Foreground="#666666"/>
                    <TextBlock Grid.Column="2"
                               Text="上書き値"
                               FontWeight="SemiBold"
                               Foreground="#666666"/>
                </Grid>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="label"
                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               x:Name="LabelCurrentText"
                               VerticalAlignment="Center"/>
                    <ComboBox x:Name="LabelComboBox"
                              Grid.Row="0"
                              Grid.Column="2"
                              Height="26">
                        <ComboBoxItem Content="joy"/>
                        <ComboBoxItem Content="sadness"/>
                        <ComboBoxItem Content="anger"/>
                        <ComboBoxItem Content="fear"/>
                        <ComboBoxItem Content="neutral"/>
                    </ComboBox>

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="intensity"
                               VerticalAlignment="Center"
                               Margin="0,6,0,0"/>
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               x:Name="IntensityCurrentText"
                               VerticalAlignment="Center"
                               Margin="0,6,0,0"/>
                    <Grid Grid.Row="1"
                          Grid.Column="2"
                          Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="IntensitySlider"
                                Height="26"
                                Style="{StaticResource OtomeKairoSliderStyle}"/>
                        <TextBlock Grid.Column="1"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   TextAlignment="Right"
                                   Text="{Binding ElementName=IntensitySlider, Path=Value, StringFormat=0.00}"/>
                    </Grid>
                </Grid>

                <!-- components -->
                <TextBlock Text="components"
                           FontWeight="SemiBold"
                           Margin="0,12,0,6"/>
                <Grid Margin="20,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="joy"
                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               x:Name="JoyCurrentText"
                               VerticalAlignment="Center"/>
                    <Grid Grid.Row="0"
                          Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="JoySlider"
                                Height="26"
                                Style="{StaticResource OtomeKairoSliderStyle}"/>
                        <TextBlock Grid.Column="1"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   TextAlignment="Right"
                                   Text="{Binding ElementName=JoySlider, Path=Value, StringFormat=0.00}"/>
                    </Grid>

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="sadness"
                               VerticalAlignment="Center"
                               Margin="0,4,0,0"/>
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               x:Name="SadnessCurrentText"
                               VerticalAlignment="Center"
                               Margin="0,4,0,0"/>
                    <Grid Grid.Row="1"
                          Grid.Column="2"
                          Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="SadnessSlider"
                                Height="26"
                                Style="{StaticResource OtomeKairoSliderStyle}"/>
                        <TextBlock Grid.Column="1"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   TextAlignment="Right"
                                   Text="{Binding ElementName=SadnessSlider, Path=Value, StringFormat=0.00}"/>
                    </Grid>

                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="anger"
                               VerticalAlignment="Center"
                               Margin="0,4,0,0"/>
                    <TextBlock Grid.Row="2"
                               Grid.Column="1"
                               x:Name="AngerCurrentText"
                               VerticalAlignment="Center"
                               Margin="0,4,0,0"/>
                    <Grid Grid.Row="2"
                          Grid.Column="2"
                          Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="AngerSlider"
                                Height="26"
                                Style="{StaticResource OtomeKairoSliderStyle}"/>
                        <TextBlock Grid.Column="1"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   TextAlignment="Right"
                                   Text="{Binding ElementName=AngerSlider, Path=Value, StringFormat=0.00}"/>
                    </Grid>

                    <TextBlock Grid.Row="3"
                               Grid.Column="0"
                               Text="fear"
                               VerticalAlignment="Center"
                               Margin="0,4,0,0"/>
                    <TextBlock Grid.Row="3"
                               Grid.Column="1"
                               x:Name="FearCurrentText"
                               VerticalAlignment="Center"
                               Margin="0,4,0,0"/>
                    <Grid Grid.Row="3"
                          Grid.Column="2"
                          Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="FearSlider"
                                Height="26"
                                Style="{StaticResource OtomeKairoSliderStyle}"/>
                        <TextBlock Grid.Column="1"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   TextAlignment="Right"
                                   Text="{Binding ElementName=FearSlider, Path=Value, StringFormat=0.00}"/>
                    </Grid>
                </Grid>

                <!-- policy -->
                <TextBlock Text="policy"
                           FontWeight="SemiBold"
                           Margin="0,12,0,6"/>
                <Grid Margin="20,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Text="cooperation"
                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               x:Name="CooperationCurrentText"
                               VerticalAlignment="Center"/>
                    <Grid Grid.Row="0"
                          Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="CooperationSlider"
                                Height="26"
                                Style="{StaticResource OtomeKairoSliderStyle}"/>
                        <TextBlock Grid.Column="1"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   TextAlignment="Right"
                                   Text="{Binding ElementName=CooperationSlider, Path=Value, StringFormat=0.00}"/>
                    </Grid>

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Text="refusal_bias"
                               VerticalAlignment="Center"
                               Margin="0,4,0,0"/>
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               x:Name="RefusalBiasCurrentText"
                               VerticalAlignment="Center"
                               Margin="0,4,0,0"/>
                    <Grid Grid.Row="1"
                          Grid.Column="2"
                          Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="RefusalBiasSlider"
                                Height="26"
                                Style="{StaticResource OtomeKairoSliderStyle}"/>
                        <TextBlock Grid.Column="1"
                                   Margin="6,0,0,0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   TextAlignment="Right"
                                   Text="{Binding ElementName=RefusalBiasSlider, Path=Value, StringFormat=0.00}"/>
                    </Grid>

                    <TextBlock Grid.Row="2"
                               Grid.Column="0"
                               Text="refusal_allowed"
                               VerticalAlignment="Center"
                               Margin="0,6,0,0"/>
                    <TextBlock Grid.Row="2"
                               Grid.Column="1"
                               x:Name="RefusalAllowedCurrentText"
                               VerticalAlignment="Center"
                               Margin="0,6,0,0"/>
                    <CheckBox Grid.Row="2"
                              Grid.Column="2"
                              x:Name="RefusalAllowedCheckBox"
                              Margin="0,6,0,0"/>
                </Grid>

                <Grid Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="ClearOverrideButton"
                            Grid.Column="1"
                            Content="解除"
                            Width="110"
                            Height="28"
                            Click="ClearOverrideButton_Click"/>

                    <Button x:Name="ApplyOverrideButton"
                            Grid.Column="3"
                            Content="適用"
                            Width="110"
                            Height="28"
                            Click="ApplyOverrideButton_Click"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <TextBlock Grid.Row="1"
                   x:Name="StatusText"
                   Foreground="#666666"/>
    </Grid>
</Window>
